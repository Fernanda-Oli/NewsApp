<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/userNameFragment"
        android:name="com.feandrade.newsapp.ui.login.register.usernamefragment.UserNameFragment"
        android:label="fragment_user_name"
        tools:layout="@layout/fragment_user_name" >
        <action
            android:id="@+id/action_userNameFragment_to_passwordFragment"
            app:destination="@id/passwordFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.feandrade.newsapp.ui.login.loginfragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_userNameFragment2"
            app:destination="@id/userNameFragment" />
        <action
            android:id="@+id/action_loginFragment_to_subjectsInterestFragment"
            app:destination="@id/subjectsInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordFragment"
        android:name="com.feandrade.newsapp.ui.login.register.passwordfragment.PasswordFragment"
        android:label="fragment_password"
        tools:layout="@layout/fragment_password" >
        <action
            android:id="@+id/action_passwordFragment_to_photoFragment"
            app:destination="@id/photoFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoFragment"
        android:name="com.feandrade.newsapp.ui.login.register.photofragment.PhotoFragment"
        android:label="fragment_photo"
        tools:layout="@layout/fragment_photo" >
        <action
            android:id="@+id/action_photoFragment_to_welcomeFragment2"
            app:destination="@id/welcomeFragment2" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment2"
        android:name="com.feandrade.newsapp.util.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout = "@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment2_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
    <fragment
        android:id="@+id/subjectsInterestFragment"
        android:name="com.feandrade.newsapp.ui.home.config.subjectinterest.SubjectsInterestFragment"
        android:label="fragment_subjects_interest"
        tools:layout="@layout/fragment_subjects_interest" />
</navigation>