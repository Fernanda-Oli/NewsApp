<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.feandrade.newsapp.ui.home.homefragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
        <action
            android:id="@+id/action_homeFragment_to_subjectsInterestFragment"
            app:destination="@id/subjectsInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.feandrade.newsapp.ui.home.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.feandrade.newsapp.ui.home.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.feandrade.newsapp.ui.home.article.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.feandrade.newsapp.ui.home.menu.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_subjectsInterestFragment"
            app:destination="@id/subjectsInterestFragment" />
    </fragment>
    <fragment
        android:id="@+id/subjectsInterestFragment"
        android:name="com.feandrade.newsapp.ui.home.subjectinterest.SubjectsInterestFragment"
        android:label="fragment_subjects_interest"
        tools:layout="@layout/fragment_subjects_interest" />

</navigation>